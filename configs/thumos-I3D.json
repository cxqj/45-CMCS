{
    # 训练相关参数
    "experiment_naming":"thumos-I3D",

    "dataset_name":"thumos14",
    
    "feature_type":"i3d",
    "feature_oversample":true,  # 是否进行数据增强
    "sample_rate":16,

    "with_bg":true,       # 是否进行困难负样本挖掘
    "diversity_reg":true,   # 是否使用diversity loss and norm regularization
    "diversity_weight":0.2,  

    "train_run_num":3,      # 实验重复的次数

    "training_max_len":null,    
    "feature_dim":1024,   

    "batch_size":24,
    "learning_rate":1e-4,
    "learning_rate_decay":false,
    "weight_decay":1e-3,
    
    "max_step_num":15005,   # 训练迭代次数
    
    "check_points":[
        15000
    ],
    "log_freq":500,
    
    "model_params":{
        "class_num":null,
        "dropout_rate":0.5,
        "cls_branch_num":4,   # 多分支网络的分支数
        "base_layer_params":[
            [
                32,   # 卷积核大小
                1     # 步长
            ]
        ],
        "cls_layer_params":[
            [
                16,
                3
            ]
        ],
        "att_layer_params":[
            [
                16,
                1
            ]
        ]
    },


    # 定位相关的参数
    "detect_params":{
        "global_score_thrh":0.1,
        "metric_type":"score",
        "att_filtering_value":null,
        "thrh_type":"mean",
        "thrh_value":1,
        "interpolate_type":"linear",
        "proc_type":"dilation",
        "proc_value":1.25,
        "sample_offset":0,
        "weight_inner":1,
        "weight_outter":-1,
        "weight_global":0.25
    },


    "action_class_num":{
        "thumos14":20,
        "ActivityNet":null
    },

    "base_sample_rate":{
        "thumos14":{        
            "i3d":4,
            "untri":5
